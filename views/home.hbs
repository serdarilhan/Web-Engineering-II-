<input type="text" id="input" onkeyup="myFunction()" placeholder="Suche nach Personen..">

<script>
function myFunction() { //String wird zeichen für zeichen durchgegangen bei keinem Treffer werden die Datensätze nicht angezeigt. Suche nach Personen

  var input, filter, ul, li, a, i, txtValue;
  input = document.getElementById('input');
  filter = input.value.toUpperCase();
  ul = document.getElementById("liste");
  li = ul.getElementsByTagName('li');

  for (i = 0; i < li.length; i++) {
    a = li[i].getElementsByTagName("p")[0];
    txtValue = a.textContent || a.innerText;
    if (txtValue.toUpperCase().indexOf(filter) > -1) {
      li[i].style.display = "";
    } else {
      li[i].style.display = "none";
    }
  }
}

</script>

<ul id="liste">
        </ul>
        {{#each liste}}
	<script>
		var string = "{{this}}";
    string = string.split(" ");
console.log(string);

		var p = document.createElement("p");
		var input = document.createElement("INPUT");
		input.setAttribute("type", "text");
		input.setAttribute("id", string[0]);
		input.setAttribute("value", string[1]);
		var copybutton = document.createElement("button");
		copybutton.setAttribute("class", "btn btn-outline-primary");
		copybutton.setAttribute("onclick",string[0]+"()");
		copybutton.innerHTML = "Kopieren";
		var li = document.createElement("li");
		p.innerHTML = string[2];
		p.style.fontWeight = "bold";
		li.appendChild(p);
		li.appendChild(input);
		li.appendChild(copybutton);
		document.getElementById("liste").appendChild(li);	
	</script>
     
      
	{{/each}}

{{#each namen}}

<script>
function {{this}}() {
  /* Get the text field */
  var copyText = document.getElementById("{{this}}");

  /* Select the text field */
  copyText.select();
  copyText.setSelectionRange(0, 99999); /* For mobile devices */

  /* Copy the text inside the text field */
  document.execCommand("copy");

  /* Alert the copied text */
  alert("Copied the text: " + copyText.value);
}
</script>
{{/each}}
