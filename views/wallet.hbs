    <script>alert("{{message1}}")</script> --}}
    <script>alert("{{message2}}")</script>
    <p>{{message3}}</p>
    <p>{{message4}}</p>
    <p>{{message5}}</p>
    <p>{{message6}}</p>
    <p>{{message7}}</p>
    <p>{{message8}}</p>



    <script>
        var server = "http://localhost:8080";
        setInterval(function () {
            $.ajax({
                url: server + "/get_mining",
                method: "GET",
                success: function (response) {
                    var data = JSON.parse(response);
                    console.log(data);
                    console.log(data[0].mining);
                    document.getElementById("miningstand").innerHTML = data[0].mining;
                }
            });
        }, 3000);
    </script>


</body>

</html>